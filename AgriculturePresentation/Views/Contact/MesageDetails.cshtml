@model EntityLayer.Concrete.Contact

@{
    ViewData["Title"] = "MesageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Detayları Sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x => x.ContactID)
                    <label for="exampleInputName1">Adı Soyadı</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Name">
                </div>
                <br />
                <div class="form-group">
                    <label for="exampleInputName1">Mail Adresi</label>
                    <span asp-validation-for="Mail" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Mail">
                </div>
                <br />
                <div class="form-group">
                    <label for="exampleInputName1">Tarih</label>
                    <span asp-validation-for="Date" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Date">
                </div>
                <br />
                <div class="form-group">
                    <label for="exampleInputName1">Mesaj Detayı</label>
                    <textarea class="form-control" rows="20" cols="5" asp-for="Message"></textarea>
                </div>
                <br />
            </form>
        </div>
    </div>
</div>

